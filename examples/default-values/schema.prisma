datasource mongodb {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "mongodb"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/myprisma"
}

model Task {
  id           String            @id @default(auto()) @map("_id") @mongodb.ObjectId
  label        String            @default("")
  priority     TaskPriorityType?
  isComplete   Boolean           @default(false)
  assignedTo   Person?           @relation("Task_assignedTo", fields: [assignedToId], references: [id])
  assignedToId String?           @map("assignedTo")
  finishBy     DateTime?
  viewCount    BigInt?           @default(0)

  @@index([assignedToId])
}

model Person {
  id    String @id @default(auto()) @map("_id") @mongodb.ObjectId
  name  String @unique @default("")
  tasks Task[] @relation("Task_assignedTo")
}

enum TaskPriorityType {
  low
  medium
  high
}
